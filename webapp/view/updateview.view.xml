<mvc:View controllerName="miningproject.suryasprint.controller.updateview"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <Page id="idUpdate" title="Update mining record">
	<content>	
			<f:SimpleForm editable="true" >

<Label text="unique identifier" required="false"></Label>
<Input enabled="false" id="idlUp" value="{MiningModel>LocId}" width="250px"></Input>


<Label text="currency key" required="false"></Label>
<Input id="idUpCurKey" value="{MiningModel>Currency}" width="180px"></Input>

<Label text="Number of drills"></Label>
<Input id="idUpDri" value="{MiningModel>DrillN}" width="180px"></Input>

<Label text="Mineral"></Label>
<Input id="idUpMin" value="{MiningModel>LMineral}" width="180px"></Input>



<Label text="type of mineral"></Label>
<Input id="idUprep" value="{MiningModel>Report}" width="180px"></Input>

<Label text="Description"></Label>
<Input id="idUpdesc" value="{MiningModel>LDesc}" width="180px"></Input>

<Label text="Cost"></Label>
<Input id="idUpCos" value="{MiningModel>LCost}" width="180px"></Input>


<Button text="Submit" width="180px" press="onUpdate"></Button>


</f:SimpleForm>
		</content>
		
	</Page>
</mvc:View>